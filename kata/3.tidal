let warp = fast (0.3 +| slow 32 sine |* 2)

do
  -- @setup
  setcps (210/120)
  setkey 3 "octatonic"

do
  -- @name kata
  mc $ l
    (slow 2 $ n "<0 ~>@3 0")
    (slow 2 $ n "<~ 0>")
    __ -- (chunk 4 (hurry 4) $ slow 2 $ n "0*4" # open 0.1)
    __
    __ -- ((t . sometimes (off (1/8) (|+ 7))) "[0@4 4 5 6 9@22 5@3]/8" # octave 3)
    (warp $ degradeBy 0.3 $ t ("0*8" |+ (fast 2 $ irand 8)) # open 0.5 # octave 3)
