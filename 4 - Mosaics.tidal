
-- Aggregates
do
  setcps 0.8
  let master = 0.9
      fader n = gain ((cF 1 $ "v" ++ (show n)) * master)
      bus = room (cF 0 "room") # size (cF 0 "size") # orbit 1
      spice x = rarely (# n x)
      vk = s "vk" # n 3
      vs = s "vs" # n 117
      vh = s "vh" # n 2 # sus 0.08
      vo = s "vh" # n 15 # sus 1
      vibe =  s "supervibe" # fader 0.8 # lpf 500 # bus |* sus 2
      piano =  s "superpiano" # fader 1 # lpf 250 # bus
      root = (|- 0)
      tonal scalename pat = (note . root . scale scalename) pat
  p "vibes"
    $ tonal "minor" "{3 0 1 2@2}%4"
    # vibe
    # octave 7

setcps 0.78

let master = 0.9
    fader n = gain ((cF 1 $ "v" ++ (show n)) * master)
    bus = room (cF 0.1 "room") # size (cF 0.1 "size") # orbit 1
    vk = s "vk" # n 3
    vs = s "vs" # n 117
    vh = s "vh" # n 2 # sus 0.08
    vo = s "vh" # n 15 # sus 1
    root = (|- 7)
    tonal scalename pat = (note . root . scale scalename) pat
    fx n = cF 0 $ "f" ++ (show n)
    vibe x  = tonal "minor" x # s "supervibe" # fader 0.5 # lpf 500  # bus |* sus 2 # octave 7
    piano x = tonal "dorian" x # s "superpiano" # fader 0.85 # lpf 300 # bus |* sus 1.1 # octave 3
    gong x  = tonal "minor" x # s "supergong" # fader 0.5 # lpf 500 # bus |* sus 2 # octave 5

p "vibes" $ stack
    [ vibe "{3 0 1 2@2}%4" # pan 0
    -- , vibe ("{ 0 1 2 -2 -4 -7 }%4" |- 1) # pan 1
    -- , vibe ("{ 0 -2 2 0 4 2 }%4" |+ 6) # pan 0.5
    ]
    # gain 0.8
    -- # gain 0

xfadeIn "vibes" 4 $ stack
    [ vibe "{3 0 1 2@2}%4" # pan 0
    -- , vibe ("{ 0 1 2 -2 -4 -7 }%4" |- 1) # pan 1
    , vibe ("{ 0 -2 2 0 4 2 }%4" |+ 6) # pan 0.5
    ]
    # accelerate ((|* 0) $ range (-1) 1 $ rand)
    # gain 0.8
    -- # gain 0

do
  -- All shimmers
  xfadeIn "vibes" 8 $ stack
      [ vibe "{3 0 1 2@2}%4" # pan 0
      , vibe ("{ 0 1 2 -2 -4 -7 }%4" |- 1) # pan 1
      , vibe ("{ 0 -2 2 0 4 2 }%4" |+ 6) # pan 0.5
      ]
      # gain 0.8
      -- # gain 0
  -- Piano Bass enters
  xfadeIn "piano" 16 $ piano "{ 0@3 0 }%4" # pan 0.4

-- Piano Chords enter
p "piano" $ stack
    [ piano "{ 0@3 0 }%4" # pan 0.4
    , piano  ("{ -3 0@4 2@3 1@3 0@3 }%4" |+ 7 |+ "[0,4,6,11]") # pan 0.4 |* sus 1.2
    ]

--  Final piano melody enters
p "piano" $ stack
    [ piano "{ 0@3 0 }%4" # pan 0.4
    , piano  ("{ -3 0@4 2@3 1@3 0@3 }%4" |+ 7 |+ "[0,4,6,11]") # pan 0.4 |* sus 1.2
    , piano  "{3 4 5 6@3 1@3 0@3 3@3}%4" # octave 5 # gain 1 |* sus 3
    ]


let gong x  = tonal "minor" x # s "supergong" # fader 0.4 # lpf 500 # bus |* sus 6 # octave 4
in p "gong" $ (gong "{ -4 -1@3 }%1") # gain 0.7 # accelerate 0.2 # bus

p "gong" $ silence

-- Percussion enters
clutchIn "perc" 32 $ stack
  [ n "{0     0 ~   ~ 0 ~   ~     0}%4" # s "bo" # pan 0.4
  , n "{<5 3> ~ 1*2 2 ~ 1*2 <3 5> ~}%4" # s "bc" # pan 0.6
  ]
  # gain 0.75
  # bus

-- Bass Drum enters
p "perc2" $ slow 2 $ n ("{0@3 0}%2" |+ 4) # s "bo" # speed 0.2 # gain 1.1 # bus

