xfadeIn "piano" 4 $ stack
    [ piano  ("{ -3 0@4 2@3 1@3 0@3 }%4" |+ 7 |+ "[0,4,6,11]") # pan 0.4 |* sus 1.2
    , piano  "{3 4 5 6@3 1@3 0@3 3@3}%4" # octave 5 # gain 1.1 |* sus 1.8
